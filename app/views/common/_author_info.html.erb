<div class="containing-div author-info">
  <%= render(:partial => 'common/thumb_pic_loader', object: user, as: :entity )%>
  &nbsp;
  <% if date_time %>
    <div class="author-name"><%= link_to "#{user.name}", user %></div>
    <div class="date-info"><%= date_time_helper date_time %></div>
  <% else %>
    <div class="author-name author-name-without-date"><%= link_to "#{user.name}", user %></div>
  <% end %>
</div>
