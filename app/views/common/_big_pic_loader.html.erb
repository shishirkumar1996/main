<% if entity.image? %>
		<%= link_to(image_tag(entity.image.big.url),user_path(entity),:class => "profile_pic" )%>
<% else %>
		<%= link_to(image_tag('dummies/large.png'),
		entity.class ==  User ? user_path(entity) : (entity.class == Domain ? domain_path(entity) : group_path(entity))) %>
<% end %>
