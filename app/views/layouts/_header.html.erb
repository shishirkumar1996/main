				<li><%= link_to "my account",user_path(current_user) %></li>
				<li><%= link_to "my groups", your_groups_path %></li>
				<li><%= link_to "create new group",new_group_path %></li>
				<li><%= link_to "Help" %></li>
				<li><%= link_to "settings" %></li>
				<li class = "divider"></li>
				<li>
					<%= link_to "Log out",logout_path, method: "delete" %>
