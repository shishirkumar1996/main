<% @feed.each do |feed| %>
	<div class = "center jumbotron">
	<%# label(:domain, "#{feed.domain.name}") %>
	<% feed.domains.each do |domain| %>
		<%= link_to domain.name,domain_path(domain.id) %>
	<% end %>
	</br>
	<%= social_share_button_tag(feed.title) %>
	<h3><%= feed.title.html_safe %></h3>
	<% if feed.class == Article %>
		<p><%= feed.body.html_safe %></p>
		<%= link_to "Replies", '#', class: 'reply_button',id: "article_#{feed.id}",remote: true %>
		</br>
		<section class = 'reply' id = "articlereply_<%= feed.id %>">
		<% if feed.articlereplies.any? %>
			<ul class = "replies list-group" id = "articlereplies_<%= feed.id %>">
				<%= render feed.articlereplies %>
			</ul>
		<% end %>
		<%= form_for([feed,feed.articlereplies.build],remote: true) do |f| %>
			<%= f.cktext_area :body,id: "articlefield_#{feed.id}",rows: 3,:ckeditor =>{:toolbar=>'body'} %>
			<div>
				<%= f.submit 'Reply' %>
			</div>
		<% end %>
		</section>
	</br>
		<%= link_to "Upvote",'#' %>
		<%= link_to "Downvote", '#' %>
	<% else %>
	<p><%= feed.description.html_safe %></p>
	</br>
		<% if !current_user?(feed.user) %>
			<%= link_to "Answer", new_question_answer_path(feed) %>
		</br>
		<% end %>
		<% if feed.answers.any? %>
		</br>
			Answers(<%= feed.answers.count %>)
		<ul class = "answers list-group">
			<%= render feed.answers %>
		</ul>
				
		<% end %>
	<% end %>
	
	</div>
<% end %>
