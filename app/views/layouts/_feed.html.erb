<% @feed.each do |feed| %>
	
	<div class = "feed_container">
		<div class = "category">
			Category: <%= feed.class %>
		</div>
	<div class = "domain_container">
		Related domains:
	<%# label(:domain, "#{feed.domain.name}") %>
	<% feed.domains.each do |domain| %>
		<em><%= link_to domain.name,domain_path(domain.id) %></em>
	<% end %>
	</div>
	<div class = "title_container">
		</br>
	<strong><%= feed.title.html_safe %></strong>
	<div class = "feed_created_at">
	</br>
	<%= feed.created_at.strftime("%d %b. %Y") %>
	</div>
	<br>
	</div>
	<% if feed.class == Article %>
		<%= render feed %>
	<% else %>
			Description:<br>
		<div class = "description_container"> 
			
	<%= feed.description.html_safe %>
	</div>
	</br>
		<% if !current_user?(feed.user) %>
			</br>
				<div id = "question_bookmark_<%= feed.id %>" class = "question_bookmark">
					<% if current_user.bookmark_question?(feed) %>
						<%= render(:partial=>'questions/unbookmark',:locals=>{
						:question => feed}) %>
					<% else %>
						<%= render(:partial=>'questions/bookmark',:locals=>
						{:question=> feed}) %>
					<% end %>				
				</div>
				
		<% end %>
		<%if current_user?(feed.user)||current_user.answered?(feed) %>
		<a class = "answer_tag">Answer</a>
		<% else %>
			<%= link_to "Answer", new_question_answer_path(feed),class: 'answer_tag' %>
		<% end %>
		</br>
		<% if feed.answers.any? %>
		</br>
		<div class = "answers_tag">
			Answers(<%= feed.answers.count %>)
		</div>
		<br>
		<ul class = "answers list-group">
			<%= render feed.answers %>
		</ul>
				
		<% end %>
	<% end %>
	</br>	
	</div>
<% end %>
