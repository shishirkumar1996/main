<div class = "col-md-6 col-md-offset-2">
	<%= hidden_field_tag :group, @group.id %>
	<%= form_for([@group, @question]) do |f| %>
		<%= render 'common/error_messages', object: f.object %>
		<%= f.label :title %>
		<div>
			<%= f.text_field :title %>
		</div>
		<%= f.label :description %>
		<%= f.cktext_area :description, rows: 5, :ckeditor =>{:toolbar => 'body' }%>
		<div>
		<%= f.submit %>
		</div>
	<% end %>
</div>
		
