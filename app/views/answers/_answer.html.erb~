<li>
 	<%= answer.body.html_safe %>
 	<br>
 	<%= link_to "Reply",'#', class: 'reply_button', id: "answer_#{answer.id}" %>
 	<br>
 	<section class='reply' id= "reply_<%= answer.id %>">
	<% if answer.replies.any? %>
  	<ul  class = "replies list-group" id = "replies_<%= answer.id %>">
 			<%= render answer.replies %>
		</ul>			
	<% end %>
	<% if current_user?(answer.question.user)|| (current_user?(answer.user) && answer.replies.any? ) %>
		</br>
		<%= form_for(answer.replies.build,remote: true) do |f| %>
			<%= f.cktext_area :body,id: "field_#{answer.id}", rows: 3,:ckeditor =>{:toolbar => 'body'}%>
			<div><%= hidden_field_tag :answer_id, answer.id %></div>
			<div>
			<%= f.submit 'Reply'  %>
			</div>
		<% end %>
	<% end %>
	</section>
	</br>
	<% if !current_user?(answer.question.user) %>
		<%= link_to "Like",'#' %>
	<% end %>	
			
</li>
	
