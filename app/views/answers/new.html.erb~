	</br>
	<h3><%= @question.title.html_safe %></h3>
		</br>
		<p>	<%= @question.description.html_safe %></p>
		</br>
	<%= form_for @answer do |f| %>
	<%= render 'common/error_messages' , object: f.object %>
		<div>
			<%= f.label "Write your answer here" %>
			</br>
			<%= f.cktext_area :body, rows: 5,:ckeditor =>{:toolbar => 'body'}%>
		</div>
		<div>
			<%= f.submit %>
		</div>
	<% end %>
</div>
