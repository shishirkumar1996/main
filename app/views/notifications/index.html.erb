<%= render :partial=> 'layouts/header' %>

<%= link_to 'Back',root_url %>
<%= link_to "Mark all as read",mark_user_notifications_path(current_user),remote: true,class: 'mark_as_read' %>

<div class = "row">
<div class = "col-md-offset-3 col-md-6">
<ul id =  "notification-container">
			<% if @notifications.count > 0 %>
				<%= render @notifications %>
			<% else %>
				<li>No new notifications</li>
			<% end %>
			</ul>
			
			
	<%= link_to "load all notifications",old_notifications_user_notifications_path(current_user) %>		
			
</div>
</div>
