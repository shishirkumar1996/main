<%= render :partial=> 'layouts/header' %>

<%= link_to 'Back',:back %>


<div class = "row">

<div class = "col-md-4 col-md-offset-4">
<% if(@domain.locked) %>
This domain can't be changed anymore
<% end %>
	
	<% if(!@domain.available) %>
	This domain has been moved to other domain 
	<% else %>
	<h4>Parent domains</h4>
	<% if(!@domain.locked) %>
	<%= link_to 'Edit', manage_superset_domain_path(@domain) %>
	<% end %>
	<br>
	<ul style="list-style: none;padding-left: 0%">
<% @domain.supersets.each do |superset| %>
	<li style = "border: 1px solid;padding-top: 1vh;padding-bottom: 1vh;"><%= superset.name %></li>
<% end %>
	</ul>
	</br>
	<ul style = "list-style: none;padding-left: 0%;">
		<h4>Children domains</h4>
		<% if(!@domain.locked) %>
			<%= link_to 'Edit',manage_subset_domain_path(@domain) %>
		<% end %>
		<br>
		<% @domain.subsets.each do |subset| %>
		<li style = "border: 1px solid;padding-top: 1vh; padding-bottom: 1vh;">	<%= subset.name %></li>
		<% end %>
		</ul>
	<% end %>
</div>
</div>
