<%= render :partial=>'layouts/header' %>


<% if @user.image? %>
		<%= link_to(image_tag(@user.image.profile.url),user_path(@user),:class => "profile_pic" )%>
		<% elsif !@user.provider.nil? %>
		<%= link_to(image_tag("http://graph.facebook.com/#{@user.uid}/picture?type=large")) %>
		<% else %>
		<%= link_to "no profile pic",user_path(@user) %>
		<% end %>
		<% if @user==current_user %>
<%= form_tag image_user_path(current_user), multipart: true do %>
<%= file_field_tag :image, accept: 'image/jpeg , image/gif, image/png' %>
<%= submit_tag %>
<% end %>
<% end %>


<h1><%= @user.name %></h1>
</br>
<h2><%= @user.email %></h2>
</br>
<% if logged_in? &&  current_user != @user %>
	<div id = "follow_form">
	<% if current_user.following?(@user) %>
		<%= render 'unfollow' %>
	<% else %>
		<%= render 'follow' %>
	<% end %>
	</div>
<% end %>

<h4>Interests</h4>
<% if @user==current_user %>
<%= link_to 'Edit',interest_user_path(@user)%>
<% end  %>
</br>
<% @user.relations.each do |relation| %>
<%= label(:interest,"#{relation.name}") %>
<% end %>


<h4>Education</h4>
<%if @user==current_user %>
<%= link_to 'Edit',academic_user_path(current_user) %>
<% end %>
</br>
<% @user.universities.each do |academic| %>
	<%= label(:academic,"#{academic.name}") %>
<% end %>
