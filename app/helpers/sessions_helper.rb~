module SessionsHelper

	def log_in(user)
		session[:user_id] = user.id
	end
	
	
	def logged_in?
		!current_user.nil?
	end
	
	def current_user?(user)
		user == current_user
	end
	
	def current_user
  	if(user_id = session[:user_id])  #checks whether session of user_id exists or not
  		@current_user ||= User.find_by(id: user_id)
  	elsif(user_id = cookies.signed[:user_id]) #checks whether cookie of user_id exists or not
  		user = User.find_by(id: user_id)
  		if user && user.authenticated?(:remember,cookies[:remember_token])
  			log_in user
  			@current_user = user
  		end
  	end
  end
  
  def forget(user)
  	#user.forget
  	cookies.delete(:user_id)
  	cookies.delete(:remember_token)
  end
  
  def log_out
  	forget(current_user)
  	session.delete(:user_id)
  	@current_user = nil
  end
  
  
end
